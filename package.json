{
  "name": "wordup",
  "version": "0.0.4",
  "title": "WordUp.js",
  "description": "A library for wrapping all words in a given DOM context inside of HTML tags.",
  "license": "MIT",
  "main": "dist/wordup.js",
  "jsnext:main": "dist/wordup.esnext.js",
  "author": {
    "name": "Justin M. Williams",
    "url": "https://github.com/nerdstep"
  },
  "homepage": "",
  "keywords": [
    "jQuery",
    "plainJS",
    "DOM",
    "highlight",
    "text",
    "selection",
    "nodes",
    "elements",
    "words",
    "wrap",
    "ES2015"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nerdstep/wordup"
  },
  "directories": {
    "example": "examples"
  },
  "dependencies": {},
  "devDependencies": {
    "ava": "^0.16.0",
    "buble": "^0.12.5",
    "eslint": "^3.2.2",
    "eslint-config-airbnb-base": "^5.0.1",
    "eslint-plugin-import": "^1.12.0",
    "jsdom": "^9.4.1",
    "npm-run-all": "^2.3.0",
    "rollup": "^0.34.7",
    "rollup-plugin-buble": "^0.12.1",
    "rollup-plugin-filesize": "^0.4.4",
    "rollup-plugin-json": "^2.0.1",
    "rollup-plugin-uglify": "^1.0.1"
  },
  "scripts": {
    "test": "ava",
    "lint": "eslint src",
    "prebuild": "",
    "build:es": "rollup -c config/rollup.es.js",
    "build:umd": "rollup -c config/rollup.umd.js",
    "build:min": "rollup -c config/rollup.umd.min.js",
    "build": "npm-run-all --parallel build:umd build:min build:es",
    "prepublish": "npm run build&&npm test"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "browser": true
    },
    "rules": {
      "semi": 0,
      "no-param-reassign": 0
    }
  },
  "ava": {
    "require": [
      "./test/helpers/setup-browser-env.js"
    ]
  }
}
