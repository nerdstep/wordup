{
  "name": "wordup",
  "version": "0.1.1",
  "title": "WordUp.js",
  "description": "A zero dependency micro library for wrapping words with HTML tags.",
  "license": "MIT",
  "main": "dist/wordup.js",
  "browser": "dist/wordup.min.js",
  "module": "dist/wordup.esnext.js",
  "author": {
    "name": "Justin M. Williams",
    "url": "https://github.com/nerdstep"
  },
  "homepage": "",
  "keywords": [
    "plainJS",
    "DOM",
    "highlight",
    "text",
    "selection",
    "nodes",
    "elements",
    "words",
    "wrap"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nerdstep/wordup"
  },
  "directories": {
    "docs": "docs",
    "src": "src"
  },
  "scripts": {
    "clean": "rimraf dist",
    "cover": "nyc ava",
    "test": "ava",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prebuild": "npm run clean",
    "build:es": "rollup -c config/rollup.es.js",
    "build:umd": "rollup -c config/rollup.umd.js",
    "build:min": "rollup -c config/rollup.umd.min.js",
    "build": "npm-run-all --parallel build:umd build:min build:es",
    "prepublish": "npm run build&&npm test"
  },
  "dependencies": {},
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-core": "^6.25.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "babelrc-rollup": "^3.0.0",
    "eslint": "^4.0.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "jsdomify": "^3.0.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.0.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-filesize": "^1.3.2",
    "rollup-plugin-uglify": "^2.0.1"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "browser": true
    },
    "rules": {
      "semi": 0,
      "no-param-reassign": 0
    }
  },
  "ava": {
    "files": [
      "test/*.spec.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ],
    "check-coverage": true,
    "report-dir": "./coverage"
  }
}
